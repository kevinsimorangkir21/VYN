---
import "@fontsource-variable/onest";
import "../style/prose.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CookieBanner from "../components/CookieBanner.jsx";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  description,
  title,
  hideHeader = false,
  hideFooter = false,
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/V.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <!-- ‚úÖ Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-MVYH9XNM0K"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());
      gtag("config", "G-MVYH9XNM0K");
    </script>
  </head>

  <body class="relative text-black dark:text-white selection:bg-[#0f7095]/30">
    <!-- üåä Background gradien -->
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full
             bg-gray-50 dark:bg-[#0c0c0c]
             bg-[radial-gradient(ellipse_90%_80%_at_50%_-20%,rgba(15,112,149,0.12),rgba(255,255,255,0.6))]
             dark:bg-[radial-gradient(ellipse_90%_80%_at_50%_-20%,rgba(15,112,149,0.15),rgba(10,10,10,1))]"
    >
    </div>

    {!hideHeader && <Header />}

    <slot />

    {!hideFooter && <Footer />}

    <!-- üç™ Cookie Banner -->
    <CookieBanner client:load />

    <!-- üìä Google Analytics & Session Logic -->
    <script>
      const consent = localStorage.getItem("cookie-consent");

      // ‚úÖ Load Google Analytics only if consented
      if (consent === "accepted") {
        const ga = document.createElement("script");
        ga.async = true;
        ga.src = "https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"; // <-- Ganti ID kamu
        document.head.appendChild(ga);

        ga.onload = () => {
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          gtag("js", new Date());
          gtag("config", "G-XXXXXXXXXX", { anonymize_ip: true });
        };

        // ‚úÖ Example: create a simple session cookie
        document.cookie =
          "user_session=active; path=/; max-age=3600; SameSite=Lax";
      } else {
        // ‚ùå If rejected, clear cookies
        document.cookie = "user_session=; path=/; max-age=0;";
      }

      // üç™ Reset cookie consent manually
      function resetCookies() {
        localStorage.removeItem("cookie-consent");
        location.reload();
      }
    </script>

    <!-- ‚öôÔ∏è Manage Cookies Floating Button -->
    <button
      id="manage-cookies"
      onclick="resetCookies()"
      class="fixed bottom-5 right-5 z-[9998] rounded-full p-3
             bg-[#0f7095] text-black font-medium text-sm shadow-lg
             hover:bg-[#5fb7cc] transition-all duration-300"
      title="Manage cookie preferences"
    >
      üç™
    </button>

    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
        background-color: transparent;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
          background-color: #0c0c0c;
        }
      }

      /* üå´Ô∏è Header blur + glowing border */
      #header-nav {
        animation: blur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(15, 112, 149, 0.2);
          background-color: rgba(255, 255, 255, 0.5);
          padding: 0.25rem 0.75rem;
          display: flex;
          align-items: center;
          border-radius: 9999px;
          box-shadow:
            0 0 25px rgba(15, 112, 149, 0.15),
            inset 0 0 5px rgba(15, 112, 149, 0.2);
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          to {
            backdrop-filter: blur(25px);
            background-color: rgba(10, 10, 10, 0.75);
            border-color: rgba(15, 112, 149, 0.3);
            box-shadow:
              0 0 30px rgba(15, 112, 149, 0.25),
              inset 0 0 6px rgba(15, 112, 149, 0.25);
          }
        }
      }

      /* ‚ú® Smooth fade on transitions */
      main,
      section,
      header,
      footer {
        transition:
          background-color 0.3s ease,
          color 0.3s ease;
      }
    </style>
  </body>
</html>
