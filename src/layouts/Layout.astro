---
import "@fontsource-variable/onest";
import "../style/prose.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import AccessibilityToolbar from "../components/AccessibilityToolbar.jsx";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  description,
  title,
  hideHeader = false,
  hideFooter = false,
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/V.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="relative text-black dark:text-white selection:bg-[#0f7095]/30">
    <!-- ðŸŒŠ Background gradien -->
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full
             bg-gray-50 dark:bg-[#0c0c0c]
             bg-[radial-gradient(ellipse_90%_80%_at_50%_-20%,rgba(15,112,149,0.12),rgba(255,255,255,0.6))]
             dark:bg-[radial-gradient(ellipse_90%_80%_at_50%_-20%,rgba(15,112,149,0.15),rgba(10,10,10,1))]"
    >
    </div>

    {!hideHeader && <Header />}

    <slot />

    <AccessibilityToolbar client:load />

    {!hideFooter && <Footer />}

    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
        background-color: transparent;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
          background-color: #0c0c0c;
        }
      }

      /* ðŸŒ«ï¸ Header blur + glowing border */
      #header-nav {
        animation: blur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(15, 112, 149, 0.2);
          background-color: rgba(255, 255, 255, 0.5);
          padding: 0.25rem 0.75rem;
          display: flex;
          align-items: center;
          border-radius: 9999px;
          box-shadow:
            0 0 25px rgba(15, 112, 149, 0.15),
            inset 0 0 5px rgba(15, 112, 149, 0.2);
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          to {
            backdrop-filter: blur(25px);
            background-color: rgba(10, 10, 10, 0.75);
            border-color: rgba(15, 112, 149, 0.3);
            box-shadow:
              0 0 30px rgba(15, 112, 149, 0.25),
              inset 0 0 6px rgba(15, 112, 149, 0.25);
          }
        }
      }

      /* ---------------------------------
         ðŸŒŸ THEME: Teal #0f7095 Edition
      ---------------------------------- */
      html.teal-theme body > div:first-of-type {
        background: linear-gradient(135deg, #0f7095, #38c0dd);
      }

      html.teal-theme header a,
      html.teal-theme header button,
      html.teal-theme #theme-toggle-btn,
      html.teal-theme #themes-menu li {
        background-color: transparent;
        color: #0f7095;
        border-radius: 0.5rem;
        padding: 0.25rem 0.75rem;
        transition:
          color 0.25s ease,
          background-color 0.25s ease;
      }

      html.teal-theme header a:hover,
      html.teal-theme header button:hover,
      html.teal-theme #theme-toggle-btn:hover,
      html.teal-theme #themes-menu li:hover {
        color: #ffffff;
        background-color: rgba(15, 112, 149, 0.2);
      }

      /* ðŸ§­ Accessibility Toolbar */
      body.large-text {
        font-size: 1.2em;
      }

      body.high-contrast {
        filter: invert(1) hue-rotate(180deg);
      }

      /* âœ¨ Smooth fade on page transitions */
      main,
      section,
      header,
      footer {
        transition:
          background-color 0.3s ease,
          color 0.3s ease;
      }
    </style>
  </body>
</html>
