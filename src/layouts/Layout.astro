---
import "@fontsource-variable/onest";
import "../style/prose.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CookieBanner from "../components/CookieBanner.jsx";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const {
  description,
  title,
  hideHeader = false,
  hideFooter = false,
} = Astro.props;
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/V.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <!-- NOTE:
         Google Analytics akan diload via consent (di bawah).
         Jangan double-load di <head> untuk menghindari duplikasi pageview. -->
  </head>

  <body class="relative text-black selection:bg-[#0f7095]/20 bg-white">
    <!-- üßä Background: pure white + very subtle teal glow -->
    <div class="absolute inset-0 -z-10 w-full min-h-screen bg-white">
      <div
        class="absolute inset-0 pointer-events-none
               bg-[radial-gradient(circle_at_50%_0%,rgba(15,112,149,0.08),transparent_55%)]
               blur-[90px] opacity-60"
      >
      </div>
    </div>

    {!hideHeader && <Header />}

    <slot />

    {!hideFooter && <Footer />}

    <!-- üç™ Cookie Banner -->
    <CookieBanner client:load />

    <!-- üìä Google Analytics & Session (via consent) -->
    <script>
      // Single source of truth untuk GA ID (ganti ke ID milikmu):
      const GA_ID = "G-XXXXXXXXXX";

      const consent = localStorage.getItem("cookie-consent");

      // ‚úÖ Load Google Analytics only if consented
      if (consent === "accepted" && GA_ID && GA_ID !== "G-XXXXXXXXXX") {
        // Inject gtag.js
        const ga = document.createElement("script");
        ga.async = true;
        ga.src = `https://www.googletagmanager.com/gtag/js?id=${GA_ID}`;
        document.head.appendChild(ga);

        ga.onload = () => {
          window.dataLayer = window.dataLayer || [];
          function gtag() {
            dataLayer.push(arguments);
          }
          window.gtag = gtag;

          gtag("js", new Date());
          gtag("config", GA_ID, { anonymize_ip: true });
        };

        // Example: create a simple session cookie
        document.cookie =
          "user_session=active; path=/; max-age=3600; SameSite=Lax";
      } else {
        // ‚ùå If rejected, clear cookies
        document.cookie = "user_session=; path=/; max-age=0; SameSite=Lax";
      }

      // üç™ Reset cookie consent manually
      function resetCookies() {
        localStorage.removeItem("cookie-consent");
        location.reload();
      }

      // Expose for the Manage Cookies button
      window.resetCookies = resetCookies;
    </script>

    <!-- ‚öôÔ∏è Manage Cookies Floating Button -->
    <button
      id="manage-cookies"
      onclick="resetCookies()"
      class="fixed bottom-5 right-5 z-[9998] rounded-full p-3
             bg-[#0f7095] text-white font-medium text-sm shadow-lg
             hover:bg-[#5fb7cc] transition-all duration-300"
      title="Manage cookie preferences"
      aria-label="Manage cookie preferences"
    >
      üç™
    </button>

    <style is:global>
      :root {
        /* light only */
        color-scheme: light;

        /* KVNS core tokens */
        --brand-h: 190;
        --brand-500: hsl(var(--brand-h) 62% 40%);
        --ease: cubic-bezier(0.22, 1, 0.36, 1);
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
        background-color: transparent;

        /* Smooth theme transition (Apple-ish) */
        transition:
          background-color 0.35s var(--ease),
          color 0.35s var(--ease);
        font-feature-settings:
          "liga" 1,
          "calt" 1;
        font-synthesis-weight: none;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;

        transition:
          background-color 0.35s var(--ease),
          color 0.35s var(--ease);
      }

      /* Selection */
      ::selection {
        background: color-mix(in srgb, #0f7095 20%, transparent);
        color: white;
      }

      /* Subtle scrollbar */
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-thumb {
        background: color-mix(in srgb, #0f7095 35%, #d9d9d9);
        border-radius: 99px;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
        html,
        body,
        main,
        section,
        header,
        footer {
          transition: none !important;
        }
      }

      /* üå´Ô∏è Header blur + glowing border saat scroll (light only) */
      #header-nav {
        animation: kvnsNavBlur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }
      @keyframes kvnsNavBlur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(15, 112, 149, 0.2);
          background-color: rgba(255, 255, 255, 0.5);
          padding: 0.25rem 0.75rem;
          display: flex;
          align-items: center;
          border-radius: 9999px;
          box-shadow:
            0 0 25px rgba(15, 112, 149, 0.15),
            inset 0 0 5px rgba(15, 112, 149, 0.2);
        }
      }

      /* ‚ú® Smooth color transitions for main regions */
      main,
      section,
      header,
      footer {
        transition:
          background-color 0.35s var(--ease),
          color 0.35s var(--ease),
          border-color 0.35s var(--ease);
      }
    </style>
  </body>
</html>
