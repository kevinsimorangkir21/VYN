---
import "@fontsource-variable/onest";
import "../style/prose.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import AccessibilityToolbar from "../components/AccessibilityToolbar.jsx";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/V.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>

  <body class="relative text-black dark:text-white">
    <!-- background -->
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full
             bg-gray-50 dark:bg-[#161616]
             bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(240,223,170,0.35),rgba(255,255,255,0.9))]
             dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(196,176,115,0.15),rgba(22,22,22,1))]"
    ></div>

    <Header />
    <slot />

    <AccessibilityToolbar client:load />
    <Footer />

    <style is:global>
      :root {
        color-scheme: light dark;
      }

      html {
        font-family: "Onest Variable", system-ui, sans-serif;
        scroll-behavior: smooth;
      }

      body {
        color: rgba(17, 17, 17, 0.9);
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }

      @media (prefers-reduced-motion: reduce) {
        html {
          scroll-behavior: auto;
        }
      }

      @media (prefers-color-scheme: dark) {
        body {
          color: rgba(255, 255, 255, 0.9);
          background-color: #161616;
        }
      }

      /* ðŸ”¸ Header blur effect */
      #header-nav {
        animation: blur linear both 0.5s;
        animation-timeline: scroll();
        animation-range: 0 500px;
      }

      @keyframes blur {
        to {
          backdrop-filter: blur(20px);
          border-width: 1px;
          border-color: rgba(0, 0, 0);
          padding: 0.25rem 0.75rem;
          display: flex;
          flex-direction: row;
          align-items: center;
          background-color: rgb(240, 230, 200);
          border-radius: 9999px;
          box-shadow:
            0 0 20px rgba(212, 175, 55, 0.2),
            inset 0 0 5px rgba(196, 176, 115, 0.5);
        }
      }

      @media (prefers-color-scheme: dark) {
        @keyframes blur {
          to {
            box-shadow:
              0px 5px 50px -5px rgba(0, 0, 0, 0.4),
              0px 0px 10px 1px rgba(212, 175, 55, 0.2);
            background: rgba(22, 22, 22, 0.85);
            backdrop-filter: blur(20px);
            border-width: 1px;
            border-color: rgba(212, 175, 55, 0.3);
            padding: 0.25rem 0.75rem;
            display: flex;
            flex-direction: row;
            align-items: center;
            border-radius: 9999px;
          }
        }
      }

      /* -------------------------------
         âœ¨ THEME: Gold Edition
      -------------------------------- */
      html.seventeen-eight body > div:first-of-type {
        background: linear-gradient(135deg, #C4B073, #D4AF37);
      }

      html.seventeen-eight body {
        color: #fff;
      }

      html.seventeen-eight header a,
      html.seventeen-eight header button,
      html.seventeen-eight #theme-toggle-btn,
      html.seventeen-eight #themes-menu li {
        background-color: transparent;
        color: #D4AF37;
        border-radius: 0.5rem;
        padding: 0.25rem 0.75rem;
        transition: color 0.2s ease, background-color 0.2s ease;
      }

      html.seventeen-eight header a:hover,
      html.seventeen-eight header button:hover,
      html.seventeen-eight #theme-toggle-btn:hover,
      html.seventeen-eight #themes-menu li:hover {
        color: #fff;
        background-color: rgba(212, 175, 55, 0.2);
      }

      /* Accessibility Toolbar */
      body.large-text {
        font-size: 1.25em;
      }

      body.high-contrast {
        filter: invert(1) hue-rotate(180deg);
      }
    </style>
  </body>
</html>
