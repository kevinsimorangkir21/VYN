---
import ArticleLayout from "../../layouts/ArticleLayout.astro";
import { getCollection } from "astro:content";

// ğŸ”¹ Generate all article paths
export async function getStaticPaths() {
  const articles = await getCollection("articles");
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

// ğŸ”¹ Type definition for props
interface ArticleProps {
  article: {
    slug: string;
    data: {
      title: string;
      description: string;
      pubDate: Date;
      related?: { title: string; slug: string; image: string }[];
    };
    render: () => Promise<{ Content: any }>;
  };
}

// ğŸ”¹ Extract article data
const { article } = Astro.props as ArticleProps;

if (!article) {
  throw new Error("âŒ Article not found");
}

// ğŸ”¹ Render markdown content
const { Content } = await article.render();
---

<!-- âœ… Render artikel dengan layout -->
<ArticleLayout
  title={article.data.title}
  description={article.data.description}
  date={article.data.pubDate.toISOString()}
  related={article.data.related}
>
  <Content />
</ArticleLayout>
