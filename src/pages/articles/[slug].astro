---
import ArticleLayout from "../../layouts/ArticleLayout.astro";
import { getCollection } from "astro:content";

const { slug } = Astro.params;
const articles = await getCollection("articles");
const article = articles.find((a) => a.slug === slug);

let Content;
if (article) {
  // âœ… render konten markdown menjadi komponen Content
  const rendered = await article.render();
  Content = rendered.Content;
}
---

{!article ? (
  // Halaman error 404 artikel tidak ditemukan
  <main class="min-h-screen flex flex-col items-center justify-center bg-[#161616] text-gray-100 text-center px-6">
    <h1 class="text-6xl font-extrabold text-[#C4B073] mb-4">404</h1>
    <h2 class="text-2xl font-semibold mb-3">Artikel Tidak Ditemukan</h2>
    <p class="text-gray-400 max-w-md mb-8">
      Maaf, artikel dengan slug 
      <span class="text-[#C4B073] font-medium">"{slug}"</span> 
      tidak tersedia atau telah dihapus.
    </p>
    <a
      href="/articles"
      class="inline-flex items-center gap-2 text-[#C4B073] hover:text-[#D4AF37] transition-colors duration-300 font-medium"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" 
           viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
           class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" 
              d="M10.5 19.5L3 12m0 0l7.5-7.5M3 12h18" />
      </svg>
      Kembali ke Blog
    </a>
  </main>
) : (
  // Jika artikel ditemukan
  <ArticleLayout
    title={article.data.title}
    description={article.data.description}
    date={article.data.pubDate}
  >
    <Content />
  </ArticleLayout>
)}
