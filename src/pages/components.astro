      <div class="flex items-center gap-4">
        <Badge>Open to work</Badge>
        <Badge>Available for freelance</Badge>
      </div>
    </article>

    <!-- SocialPill Component -->
    <article class="space-y-4">
      <h1 class="text-lg md:text-xl font-semibold text-gray-800 dark:text-gray-100">
        &lt;SocialPill /&gt;
      </h1>
      <div class="flex flex-wrap items-center gap-3">
        <SocialPill href="https://linkedin.com/in/midudev">
          <LinkedInIcon class="w-4 h-4 md:w-5 md:h-5" />
          LinkedIn
        </SocialPill>

        <SocialPill href="https://twitter.com/midudev">
