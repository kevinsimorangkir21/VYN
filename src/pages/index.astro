---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Experience from "@/components/Experience.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import TitleSection from "@/components/TitleSection.astro";
import BookIcon from "@/components/icons/Book.astro";

// ðŸ”¥ import popup
import Popup from "@/components/Popup.astro";

const year = new Date().getFullYear();
---

<Layout
  title={`Portfolio of KEVINS ${year}`}
  description="Portfolio website by KVNS"
>
  <main class="px-4">
    <!-- ðŸ”¥ Popup aktif -->
    <Popup show={true} once={false} />

    <SectionContainer class="py-16 md:py-36">
      <Hero />
    </SectionContainer>

    <div class="space-y-24">
      <SectionContainer id="experience">
        <TitleSection>
          <Briefcase class="size-8 text-[#C4B073]" />
          Work Experience
        </TitleSection>
        <Experience />
      </SectionContainer>

      <SectionContainer id="project">
        <TitleSection>
          <CodeIcon class="size-7 text-[#C4B073]" />
          Project
        </TitleSection>
        <Projects />
      </SectionContainer>

      <!-- âœ¨ Articles Section (Gold Theme) -->
      <SectionContainer id="articles">
        <TitleSection>
          <BookIcon class="size-7 text-[#C4B073]" />
          Articles
        </TitleSection>

        <div class="grid gap-6 sm:grid-cols-2">
          <a
            href="/articles/pengalaman-kp-telkom"
            class="group p-6 rounded-2xl shadow-md 
                   bg-white/70 dark:bg-black/40 
                   backdrop-blur-lg transition-transform hover:scale-[1.02]"
          >
            <h2
              class="text-xl font-semibold mb-2 
                     group-hover:text-[#C4B073] transition-colors duration-200"
            >
              Pengalaman Kerja Praktik (KP) / Magang di Telkom Witel Lampung
            </h2>
            <p class="text-sm opacity-80 mb-2">2025-09-01</p>
            <p class="opacity-90">
              During my internship at Telkom Witel Lampung under the BGES MBB...
            </p>
          </a>

          <a
            href="/articles/tips-seo-astro"
            class="group p-6 rounded-2xl shadow-md 
                   bg-white/70 dark:bg-black/40 
                   backdrop-blur-lg transition-transform hover:scale-[1.02]"
          >
            <h2
              class="text-xl font-semibold mb-2 
                     group-hover:text-[#C4B073] transition-colors duration-200"
            >
              Tips Optimasi SEO di Astro
            </h2>
            <p class="text-sm opacity-80 mb-2">2025-09-03</p>
            <p class="opacity-90">
              Cara memanfaatkan Astro untuk SEO yang lebih baik dan performa maksimal.
            </p>
          </a>
        </div>

        <div class="mt-6 text-center">
          <a 
            href="/articles" 
            class="inline-block px-5 py-2 rounded-xl font-medium
                   bg-gradient-to-r from-[#C4B073] to-[#D4AF37]
                   text-white shadow-md hover:opacity-90 transition"
          >
            View All Articles â†’
          </a>
        </div>
      </SectionContainer>

      <SectionContainer id="about-me">
        <TitleSection>
          <ProfileCheck class="size-8 text-[#C4B073]" />
          About Me
        </TitleSection>
        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>
