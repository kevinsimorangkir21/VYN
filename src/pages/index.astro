---
import Layout from "@/layouts/Layout.astro";

import AboutMe from "@/components/AboutMe.astro";
import Briefcase from "@/components/icons/Briefcase.astro";
import CodeIcon from "@/components/icons/Code.astro";
import Experience from "@/components/Experience.astro";
import ProfileCheck from "@/components/icons/ProfileCheck.astro";
import Projects from "@/components/Projects.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Hero from "@/components/Hero.astro";
import TitleSection from "@/components/TitleSection.astro";
import BookIcon from "@/components/icons/Book.astro";
import CertificateIcon from "@/components/icons/CertificateIcon.astro";
import Certificates from "@/components/Certificates.astro";

// ðŸ”¥ Popup
import Popup from "@/components/Popup.astro";

const year = new Date().getFullYear();
---

<Layout
  title={`Portfolio of KEVINS ${year}`}
  description="Portfolio website by KVNS"
  hideHeader={true}
>
  <main class="px-4 sm:px-6 lg:px-8">
    <Popup show={true} once={false} />

    <!-- Hero Section -->
    <SectionContainer class="py-20 md:py-36 animate-fadeInUp">
      <Hero />
    </SectionContainer>

    <div class="space-y-24 md:space-y-32">
      <!-- Experience Section -->
      <SectionContainer id="experience" class="animate-fadeInUp delay-100">
        <TitleSection>
          <Briefcase class="size-8 text-[#58C4C1]" />
          Work Experience
        </TitleSection>
        <Experience />
      </SectionContainer>

      <!-- Project Section -->
      <SectionContainer id="project" class="animate-fadeInUp delay-200">
        <TitleSection>
          <CodeIcon class="size-7 text-[#58C4C1]" />
          Projects
        </TitleSection>
        <Projects />
      </SectionContainer>

      <!-- Certificate Section -->
      <SectionContainer id="certificate" class="animate-fadeInUp delay-250">
        <TitleSection>
          <CertificateIcon class="size-7 text-[#58C4C1]" />
          Certificates
        </TitleSection>
        <Certificates />
      </SectionContainer>

      <!-- Articles Section -->
      <SectionContainer id="articles" class="animate-fadeInUp delay-300">
        <TitleSection>
          <BookIcon class="size-7 text-[#58C4C1]" />
          Articles
        </TitleSection>

        <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
          {
            [
              {
                title: "Experience During Internship at Telkom",
                date: "2025-09-01",
                description:
                  "During my internship at Telkom Witel Lampung under the BGES MBB...",
                slug: "internship-experience-telkom",
              },
              {
                title:
                  "Gold Award 6th International Technology-Enhanced Language Learning Symposium (iTELLS 2025)",
                date: "2025-07-18",
                description:
                  "Cara memanfaatkan Astro untuk SEO yang lebih baik dan performa maksimal.",
                slug: "6th-itells",
              },
              {
                title: "Panduan Aksesibilitas untuk Desain Modern",
                date: "2025-09-10",
                description:
                  "Membuat desain yang ramah pengguna dan mudah diakses untuk semua orang.",
                slug: "design-accessibility",
              },
            ].map((article, i) => (
              <a
                href={`/articles/${article.slug}`}
                class={`group p-6 rounded-2xl shadow-lg
                      bg-gradient-to-b from-white/80 to-white/50
                      dark:from-gray-900/40 dark:to-gray-800/30
                      backdrop-blur-xl border border-[#58C4C1]/30
                      transition-all duration-500
                      hover:scale-[1.03] hover:shadow-2xl
                      hover:from-[#e7f9f8]/80 hover:to-[#d3f5f4]/60
                      hover:border-[#58C4C1]/60
                      animate-fadeInUp delay-${i * 150}`}
              >
                <h2 class="text-xl font-semibold mb-2 transition-colors duration-300 group-hover:text-[#58C4C1]">
                  {article.title}
                </h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                  {article.date}
                </p>
                <p class="opacity-90 text-gray-700 dark:text-gray-300">
                  {article.description}
                </p>
              </a>
            ))
          }
        </div>

        <div class="mt-10 text-center">
          <a
            href="/articles"
            class="inline-block px-6 py-3 rounded-xl font-semibold
                   bg-[#58C4C1]
                   text-white shadow-lg hover:opacity-95 hover:scale-105
                   transition-all duration-300 animate-fadeInUp delay-500"
          >
            View All Articles â†’
          </a>
        </div>
      </SectionContainer>

      <!-- About Me Section -->
      <SectionContainer id="about-me" class="animate-fadeInUp delay-400">
        <TitleSection>
          <ProfileCheck class="size-8 text-[#58C4C1]" />
          About Me
        </TitleSection>
        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>

<style is:global>
  @keyframes fadeInUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .animate-fadeInUp.delay-100 {
    animation-delay: 0.1s;
  }
  .animate-fadeInUp.delay-200 {
    animation-delay: 0.2s;
  }
  .animate-fadeInUp.delay-250 {
    animation-delay: 0.25s;
  }
  .animate-fadeInUp.delay-300 {
    animation-delay: 0.3s;
  }
  .animate-fadeInUp.delay-400 {
    animation-delay: 0.4s;
  }
  .animate-fadeInUp.delay-500 {
    animation-delay: 0.5s;
  }
</style>
