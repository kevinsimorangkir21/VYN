---
import Layout from '/Layout.astro'; // sesuaikan path layout-mu
---

<style>
  .error-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    background-color: #f3f4f6; /* light background */
    color: #1f2937; /* text color */
    text-align: center;
    padding: 2rem;
  }

  .error-page h1 {
    font-size: 8rem;
    font-weight: 800;
    margin-bottom: 1rem;
  }

  .error-page h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .error-page p {
    font-size: 1.25rem;
    max-width: 500px;
    margin-bottom: 2rem;
  }

  .error-page a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #3b82f6;
    color: white;
    font-weight: 600;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.3s ease;
  }

  .error-page a:hover {
    background-color: #2563eb;
  }

  .illustration {
    margin-top: 2rem;
    width: 250px;
    height: 250px;
    opacity: 0.2;
  }
</style>

<Layout>
  <main class="error-page">
    <h1>404</h1>
    <h2>Oops! Page not found.</h2>
    <p>
      The page you are looking for doesn’t exist or has been moved. 
      Let’s get you back home!
    </p>
    <a href="/">Back to Home</a>

    <!-- Ilustrasi simple -->
    <svg class="illustration" viewBox="0 0 512 512" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="256" cy="256" r="256" fill="#1f2937"/>
    </svg>
  </main>
</Layout>
