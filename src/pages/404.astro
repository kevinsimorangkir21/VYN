---
import Layout from "../layouts/Layout.astro";
export const prerender = true;
---

<Layout title="404 - Not Found">
  <main class="flex flex-col items-center justify-center min-h-screen bg-[#161616] text-gray-100 text-center px-6">
    <h1 class="text-7xl sm:text-8xl font-extrabold text-[#C4B073] mb-4">404</h1>
    <h2 class="text-2xl sm:text-3xl font-semibold mb-3">Oops! Page Not Found.</h2>
    <p class="text-gray-400 max-w-md mb-8">
      The page you’re looking for might have been moved or deleted.
    </p>
    <a
      href="/"
      class="inline-flex items-center gap-2 border border-[#C4B073] text-[#C4B073] px-6 py-3 rounded-xl 
             hover:bg-[#C4B073] hover:text-[#161616] transition-all duration-300 text-lg font-medium"
    >
      ← Back to Home
    </a>
  </main>
</Layout>
