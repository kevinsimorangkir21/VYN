---
/**
 * Minimal Modern Premium Badge
 * Author: KVNS Design System
 * Palette: #0f7095 (primary teal)
 */
---

<div class="flex items-center justify-center">
  <span class="relative inline-flex overflow-hidden rounded-full p-[1.5px]">
    <!-- üåä Border Gradasi Halus (Teal x Soft Blue) -->
    <span
      class="absolute inset-[-150%] animate-[spin_6s_linear_infinite]
             bg-[conic-gradient(from_0deg_at_50%_50%,#0f7095_0%,#89c2d9_40%,#0f7095_80%,#0f7095_100%)]
             opacity-60 dark:opacity-50 blur-[0.4px]"
    ></span>

    <!-- üíé Isi Badge -->
    <div
      class="inline-flex items-center justify-center px-4 py-1.5 text-sm font-semibold
             text-[#0f7095] dark:text-[#b7e4f9]
             bg-white/70 dark:bg-[#0b0b0b]/90
             rounded-full cursor-default whitespace-nowrap
             backdrop-blur-xl border border-[#0f7095]/25
             shadow-[0_0_10px_rgba(15,112,149,0.08)]
             transition-all duration-500 ease-out
             hover:scale-105 hover:shadow-[0_0_20px_rgba(15,112,149,0.2)]
             hover:text-[#09546e]"
      id="badge-core"
    >
      <slot />
    </div>
  </span>
</div>

<!-- üåà Efek Interaktif Glow Mengikuti Mouse -->
<script>
  document.addEventListener("astro:page-load", () => {
    const badge = document.getElementById("badge-core");
    if (!badge) return;

    badge.addEventListener("mousemove", (e) => {
      const rect = badge.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      badge.style.background = `
        radial-gradient(circle at ${x}px ${y}px, rgba(15,112,149,0.25), transparent 70%)
      `;
    });

    badge.addEventListener("mouseleave", () => {
      badge.style.background = "";
    });
  });
</script>

<style is:global>
  /* üé° Animasi Border Gradient */
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  /* üåô Dark Mode Refinement */
  html.dark .flex .inline-flex div {
    background: rgba(8, 8, 8, 0.85);
    color: #b7e4f9;
    border-color: rgba(15, 112, 149, 0.25);
  }

  html.dark .flex .inline-flex div:hover {
    background: rgba(10, 10, 10, 0.9);
    color: #d4f1fa;
  }

  /* üì± Responsif */
  @media (max-width: 640px) {
    .flex span div {
      font-size: 0.85rem;
      padding: 0.3rem 0.8rem;
    }
  }

  /* ‚ú® Hover Glow Efek */
  #badge-core:hover {
    box-shadow:
      0 0 10px rgba(15, 112, 149, 0.2),
      0 0 25px rgba(15, 112, 149, 0.25);
  }

  /* üå¨Ô∏è Smooth entry */
  .flex {
    animation: fadeInBadge 0.8s ease-out both;
  }

  @keyframes fadeInBadge {
    from {
      opacity: 0;
      transform: translateY(10px) scale(0.98);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }
</style>
