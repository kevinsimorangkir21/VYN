---
import SunIcon from "./icons/Sun.astro";
import MoonIcon from "./icons/Moon.astro";
import SystemIcon from "./icons/System.astro";

const THEMES = ["Light", "Dark", "System"];
---

<div class="relative mx-1 select-none">
  <!-- ðŸŒ— Toggle Button -->
  <button
    id="theme-toggle-btn"
    class="appearance-none border-none flex items-center justify-center p-2
           rounded-full hover:scale-110 active:scale-95
           bg-white/60 dark:bg-[hsl(var(--brand-h)_40%_20%_/_0.10)] backdrop-blur-md
           shadow-[0_2px_8px_hsl(var(--brand-h)_60%_20%_/_0.12)]
           transition-all duration-300 ease-out"
    aria-label="Ganti tema"
  >
    <SunIcon
      id="light"
      class="theme-toggle-icon size-5 transition-all text-[hsl(var(--brand-h)_60%_40%)]"
    />
    <MoonIcon
      id="dark"
      class="theme-toggle-icon absolute size-5 transition-all text-[hsl(var(--brand-h)_68%_62%)]"
    />
    <SystemIcon
      id="system"
      class="theme-toggle-icon absolute size-5 transition-all text-gray-500 dark:text-gray-300"
    />
  </button>

  <!-- ðŸŽ¨ Dropdown Tema -->
  <div
    id="themes-menu"
    class="absolute hidden top-10 right-0 text-sm min-w-[8.5rem] p-1
           rounded-2xl border border-[hsl(var(--brand-h)_50%_50%_/_0.20)]
           bg-white/70 dark:bg-[hsl(var(--brand-h)_24%_13%_/_0.65)] backdrop-blur-xl
           shadow-[0_4px_20px_hsl(var(--brand-h)_60%_20%_/_0.15)]
           transition-all duration-200 z-50"
  >
    <ul class="flex flex-col">
      {
        THEMES.map((theme) => (
          <li
            class="themes-menu-option px-3 py-2 cursor-pointer rounded-lg
                   hover:bg-[hsl(var(--brand-h)_60%_40%_/_0.10)] dark:hover:bg-[hsl(var(--brand-h)_60%_40%_/_0.25)]
                   text-gray-700 dark:text-gray-200
                   transition-all duration-200"
          >
            {theme}
          </li>
        ))
      }
    </ul>
  </div>
</div>

<style>
  /* âœ¨ Dropdown animation */
  #themes-menu.open {
    display: block;
    animation: fade-scale-in 0.25s ease-out forwards;
  }

  @keyframes fade-scale-in {
    from {
      opacity: 0;
      transform: scale(0.9) translateY(-6px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* ðŸŒˆ Active state highlight (Enterprise V5) */
  .themes-menu-option.active {
    background: linear-gradient(120deg, var(--brand-400), var(--brand-500));
    color: white !important;
    font-weight: 600;
    box-shadow: 0 0 10px hsl(var(--brand-h) 60% 30% / 0.25);
  }

  html.dark .themes-menu-option.active {
    background: linear-gradient(120deg, var(--brand-500), var(--brand-400));
    box-shadow: 0 0 8px hsl(var(--brand-h) 60% 40% / 0.28);
  }

  /* ðŸŒ“ Icon animation */
  .theme-toggle-icon {
    transform-origin: center;
    opacity: 0;
    scale: 0;
    transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
  }
</style>

<script is:inline>
  document.addEventListener("astro:page-load", () => {
    const THEMES = ["light", "dark", "system"];
    const matchMediaDark = window.matchMedia("(prefers-color-scheme: dark)");
    const themesMenu = document.getElementById("themes-menu");
    const toggleBtn = document.getElementById("theme-toggle-btn");

    if (!themesMenu || !toggleBtn) return;

    const getThemePreference = () => localStorage.getItem("theme") ?? "system";

    const updateIcon = (theme) => {
      document.querySelectorAll(".theme-toggle-icon").forEach((el) => {
        el.style.scale = el.id === theme ? "1" : "0";
        el.style.opacity = el.id === theme ? "1" : "0";
        el.style.transform =
          el.id === theme ? "rotate(0deg)" : "rotate(180deg)";
      });
    };

    const applyTheme = (theme) => {
      const isDark =
        theme === "dark" || (theme === "system" && matchMediaDark.matches);
      document.documentElement.classList.toggle("dark", isDark);
      updateIcon(theme);
    };

    const updateTheme = () => {
      const theme = getThemePreference();
      applyTheme(theme);
      document.querySelectorAll(".themes-menu-option").forEach((li) => {
        li.classList.toggle(
          "active",
          li.textContent.trim().toLowerCase() === theme
        );
      });
    };

    updateTheme();

    toggleBtn.addEventListener("click", (e) => {
      e.stopPropagation();
      themesMenu.classList.toggle("open");
    });

    document.addEventListener("click", () =>
      themesMenu.classList.remove("open")
    );

    document.querySelectorAll(".themes-menu-option").forEach((el) => {
      el.addEventListener("click", (e) => {
        const chosen = e.target.textContent.trim().toLowerCase();
        localStorage.setItem("theme", chosen);
        updateTheme();
        themesMenu.classList.remove("open");
      });
    });

    matchMediaDark.addEventListener("change", updateTheme);
    document.addEventListener("astro:after-swap", updateTheme);
  });
</script>
