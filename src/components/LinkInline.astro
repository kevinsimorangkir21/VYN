---
interface Props {
  href: string;
}

const { href } = Astro.props as Props;
---

<a
  href={href}
  rel={href.startsWith("http") ? "noopener noreferrer" : undefined}
  target={href.startsWith("http") ? "_blank" : undefined}
  role="link"
  class="inline-flex items-center text-base sm:text-lg font-medium relative
         text-[#0f7095] hover:text-[#5fb7cc]
         dark:text-[#89d6e8] dark:hover:text-[#a1e4f3]
         transition-colors duration-300"
>
  <slot />

  <!-- âœ¨ Smooth underline animation -->
  <span
    class="absolute left-0 bottom-0 h-[2px] w-full origin-left
           scale-x-0 bg-gradient-to-r from-[#0f7095] to-[#5fb7cc]
           dark:from-[#5fb7cc] dark:to-[#a1e4f3]
           transition-transform duration-500 ease-out
           hover:scale-x-100 rounded-full"
  ></span>
</a>

<style is:global>
  /* ðŸ“± Responsif kecil */
  @media (max-width: 400px) {
    a[role="link"] {
      font-size: 0.95rem;
    }
  }
</style>
