---
const { href } = Astro.props;
---

<a
  href={href}
  role="link"
  class="inline-flex items-center text-base sm:text-lg font-medium relative
         text-[#C4B073] hover:text-[#D4AF37]
         dark:text-[#EADFAE] dark:hover:text-[#F5E6B3]
         transition-colors duration-300 group"
>
  <slot />

  <!-- âœ¨ Animated underline -->
  <span
    class="absolute left-0 -bottom-0.5 w-0 h-[2px] bg-gradient-to-r from-[#C4B073] to-[#D4AF37] 
           group-hover:w-full transition-all duration-500 ease-out rounded-full"
  ></span>
</a>

<style is:global>
  /* ðŸ“± Responsif kecil */
  @media (max-width: 400px) {
    a[role="link"] {
      font-size: 0.95rem;
    }
  }

  /* ðŸŒ™ Mode gelap - garis bawah lebih lembut */
  @media (prefers-color-scheme: dark) {
    a[role="link"] span {
      background: linear-gradient(to right, #EADFAE, #D4AF37);
    }
  }
</style>
