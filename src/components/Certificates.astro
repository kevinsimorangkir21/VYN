---
const certificates = [
  {
    title: "Google UX Design Certificate",
    issuer: "Coursera / Google",
    year: "2024",
    logo: "/logos/google.svg",
    link: "https://coursera.org/share/example",
  },
  {
    title: "Front-End Developer Certification",
    issuer: "freeCodeCamp",
    year: "2023",
    logo: "/logos/freecodecamp.svg",
    link: "https://freecodecamp.org/certification/example",
  },
  {
    title: "Data Analytics Professional Certificate",
    issuer: "IBM",
    year: "2022",
    logo: "/logos/ibm.svg",
    link: "https://www.credly.com/badges/example",
  },
];
---

<div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
  {
    certificates.map((cert) => (
      <a
        href={cert.link}
        target="_blank"
        rel="noopener noreferrer"
        class="group relative p-6 rounded-2xl overflow-hidden
               bg-white/70 dark:bg-[#0a0a0a]/70
               backdrop-blur-xl border border-[#0f7095]/20
               shadow-[0_4px_20px_rgba(0,0,0,0.05)]
               hover:shadow-[0_6px_30px_rgba(15,112,149,0.25)]
               hover:border-[#0f7095]/40
               transition-all duration-500 hover:-translate-y-[3px]"
      >
        <!-- ðŸŒˆ Gradient Accent -->
        <div
          class="absolute inset-0 bg-gradient-to-br from-[#0f7095]/10 via-transparent to-[#74c0d9]/10
                 opacity-0 group-hover:opacity-100 transition-opacity duration-700 rounded-2xl"
        ></div>

        <!-- ðŸ§© Logo -->
        <div class="relative flex items-center gap-2 mb-4">
          <img
            src={cert.logo}
            alt={`${cert.issuer} logo`}
            class="w-8 h-8 object-contain rounded-md bg-white/60 dark:bg-white/10 p-1
                   ring-1 ring-[#0f7095]/30 shadow-sm transition-transform duration-300
                   group-hover:scale-105"
          />
          <h3
            class="text-lg font-semibold text-gray-800 dark:text-gray-200
                   transition-colors duration-300 group-hover:text-[#0f7095]"
          >
            {cert.title}
          </h3>
        </div>

        <p class="text-sm text-gray-600 dark:text-gray-400 relative z-10">
          {cert.issuer}
        </p>
        <p class="text-xs text-gray-400 mt-1 relative z-10">
          {cert.year}
        </p>

        <!-- âœ¨ Accent line -->
        <div
          class="mt-4 w-16 h-[2px] bg-[#0f7095] rounded-full
                 group-hover:w-24 transition-all duration-500"
        ></div>
      </a>
    ))
  }
</div>

<style is:global>
  /* ðŸ©µ Entry Animation */
  .grid a {
    animation: fadeCardUp 0.8s ease-out both;
  }

  @keyframes fadeCardUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ðŸŒ™ Dark Mode Polishing */
  html.dark .grid a {
    background: rgba(10, 10, 10, 0.6);
    border-color: rgba(15, 112, 149, 0.25);
  }

  html.dark .grid a:hover {
    background: rgba(15, 112, 149, 0.1);
  }

  /* ðŸ“± Responsive tweaks */
  @media (max-width: 640px) {
    .grid a {
      padding: 1rem;
    }
    .grid h3 {
      font-size: 1rem;
    }
    .grid p {
      font-size: 0.9rem;
    }
  }
</style>
