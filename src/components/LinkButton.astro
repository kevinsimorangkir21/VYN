---
const { href, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  role="link"
  class:list={[
    className,
    // gaya tombol dasar
    "inline-flex items-center justify-center gap-2 px-4 py-2 rounded-md border border-[#C4B073]/60 text-sm sm:text-base font-medium text-gray-800 dark:text-gray-200 bg-transparent dark:bg-transparent hover:bg-[#C4B073] hover:text-white hover:border-[#C4B073] focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#C4B073] select-none",
  ]}
>
  <slot />
</a>
