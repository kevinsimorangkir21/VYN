---
const { href, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  role="link"
  class:list={[
    className,
    // ðŸ”¸ Tombol dasar responsif & elegan
    "inline-flex items-center justify-center gap-2",
    "px-4 sm:px-5 py-2 sm:py-2.5 rounded-md text-sm sm:text-base font-medium",
    "border border-[#C4B073]/60 text-gray-800 dark:text-gray-200",
    "bg-transparent dark:bg-transparent",
    "transition-all duration-300 ease-in-out",
    "hover:bg-[#C4B073]/90 hover:text-white hover:border-[#C4B073]",
    "focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#C4B073]",
    "active:scale-[0.97] select-none shadow-sm hover:shadow-md",
  ]}
>
  <slot />
</a>

<style is:global>
  /* âœ¨ Hover glow untuk tampilan mewah */
  a:hover {
    box-shadow:
      0 0 8px rgba(196, 176, 115, 0.4),
      inset 0 0 3px rgba(255, 255, 255, 0.15);
  }

  /* ðŸŒ™ Mode gelap */
  @media (prefers-color-scheme: dark) {
    a:hover {
      box-shadow:
        0 0 10px rgba(196, 176, 115, 0.3),
        inset 0 0 4px rgba(255, 255, 255, 0.1);
    }
  }

  /* ðŸ“± Responsif tambahan untuk tombol sempit */
  @media (max-width: 400px) {
    a {
      font-size: 0.9rem;
      padding: 0.5rem 0.9rem;
      gap: 0.4rem;
    }
  }
</style>
