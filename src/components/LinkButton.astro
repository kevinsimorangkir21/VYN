---
const { href, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  role="link"
  class:list={[
    className,
    "inline-flex items-center justify-center gap-2",
    "px-4 sm:px-5 py-2 sm:py-2.5 rounded-xl text-sm sm:text-base font-medium",
    "bg-[#0f7095]/10 text-[#0f7095] border border-transparent",
    "transition-all duration-300 ease-out",
    "hover:bg-[#0f7095] hover:text-white hover:shadow-[0_8px_20px_rgba(15,112,149,0.25)]",
    "focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[#0f7095]",
    "active:scale-[0.97] select-none",
    "backdrop-blur-sm",
    "dark:bg-[#0f7095]/15 dark:text-[#b9e6f2] dark:hover:bg-[#0f7095] dark:hover:text-white",
  ]}
>
  <slot />
</a>

<style is:global>
  /* âœ¨ Animasi masuk halus */
  a {
    transition:
      background-color 0.3s ease,
      color 0.3s ease,
      box-shadow 0.3s ease,
      transform 0.2s ease;
  }

  /* ðŸ’¡ Glow lembut saat hover */
  a:hover {
    box-shadow:
      0 0 12px rgba(15, 112, 149, 0.3),
      inset 0 0 2px rgba(255, 255, 255, 0.1);
  }

  /* ðŸŒ™ Mode gelap: efek lebih kalem */
  @media (prefers-color-scheme: dark) {
    a:hover {
      box-shadow:
        0 0 14px rgba(15, 112, 149, 0.35),
        inset 0 0 2px rgba(255, 255, 255, 0.05);
    }
  }

  /* ðŸ“± Responsif ekstra */
  @media (max-width: 400px) {
    a {
      font-size: 0.9rem;
      padding: 0.45rem 0.9rem;
      gap: 0.35rem;
      border-radius: 0.65rem;
    }
  }
</style>
