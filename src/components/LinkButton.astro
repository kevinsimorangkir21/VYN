---
const { href, class: className } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  role="link"
  class:list={["kvns-btn-soft", className]}
>
  <slot />
</a>

<style is:global>
  .kvns-btn-soft {
    @apply inline-flex items-center justify-center gap-2 select-none;
    @apply px-4 sm:px-5 py-2 sm:py-2.5 text-sm sm:text-base font-medium rounded-xl;
    background: color-mix(in srgb, var(--brand-500) 14%, transparent);
    color: var(--brand-500);
    border: 1px solid color-mix(in srgb, var(--brand-500) 10%, transparent);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    transition: all 0.35s var(--ease);
  }

  .kvns-btn-soft:hover {
    background: var(--brand-500);
    color: white;
    border-color: var(--brand-500);
    transform: translateY(-2px) scale(1.03);
    box-shadow: 0 10px 26px -6px
      color-mix(in srgb, var(--brand-500) 42%, transparent);
  }

  html.dark .kvns-btn-soft {
    background: color-mix(in srgb, var(--brand-500) 18%, #0b0b0b);
    color: var(--brand-200);
  }
  html.dark .kvns-btn-soft:hover {
    background: var(--brand-500);
    color: white;
  }

  @media (max-width: 400px) {
    .kvns-btn-soft {
      font-size: 0.9rem;
      padding: 0.45rem 0.9rem;
      gap: 0.35rem;
      border-radius: 0.65rem;
    }
  }
</style>
