---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import SQL from "./icons/SQL.astro"
import Figma from "./icons/Figma.astro"
import Tableau from "./icons/Tableau.astro"
import Excel from "./icons/Excel.astro"
import Prototype from "./icons/Pro.astro"

const TAGS = {
  NEXT: { name: "Next.js", class: "bg-[#111111] text-white", icon: NextJS, iconSize: "w-4 h-4" },
  TAILWIND: { name: "Tailwind CSS", class: "bg-[#0A2540] text-white", icon: Tailwind, iconSize: "w-4 h-4" },
  GITHUB: { name: "GitHub", class: "bg-[#1A1A1A] text-white", icon: GitHub, iconSize: "w-4 h-4" },
  LINK: { name: "Link", class: "bg-[#1E3A8A] text-white", icon: Link, iconSize: "w-4 h-4" },
  SQL: { name: "SQL", class: "bg-[#312E81] text-white", icon: SQL, iconSize: "w-4 h-4" },
  FIGMA: { name: "Figma", class: "bg-[#9D174D] text-white", icon: Figma, iconSize: "w-4 h-4" },
  TABLEAU: { name: "Tableau", class: "bg-[#9A4E1C] text-white", icon: Tableau, iconSize: "w-4 h-4" },
  EXCEL: { name: "Excel", class: "bg-[#14532D] text-white", icon: Excel, iconSize: "w-3.5 h-3.5" },
  PROTOTYPE: { name: "Prototype", class: "bg-[#0D0D0D] text-white", icon: Prototype, iconSize: "w-4 h-4" },
}

const CATEGORIES = {
  WEB_DEV: { name: "Web Development", class: "bg-[#1E3A8A] text-white" },
  DATA_ANALYST: { name: "Data Analyst", class: "bg-[#14532D] text-white" },
  UIUX: { name: "UI/UX Designer", class: "bg-[#4C1D95] text-white" },
  GRAPHIC: { name: "Graphic Design", class: "bg-[#831843] text-white" },
}

const PROJECTS = [
  {
    title: "Harvesty - Sustainable Farming For A Healthier Future",
    description:
      "An information system related to agriculture. This system, ‘Harvesty’, helps manage agricultural product sales efficiently.",
    link: "https://idlaesy.github.io/harvesty/",
    prototype:
      "https://www.figma.com/design/SiRm4zOGvOHXEVt8pz7dyZ/Harvesty---Capstone-Project-2024?node-id=19-125&t=GfnVlIsMf4TjDT5K-1",
    github: "https://github.com/idlaesy/harvesty.git",
    image: "/harvesty.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
    categories: [CATEGORIES.WEB_DEV],
  },
  {
    title: "SIPAD (Data Analysis Monitoring Information System)",
    description:
      "A disaster data analysis prototype called ‘SIPAD’. The project utilizes Excel for data cleaning and visualization.",
    prototype:
      "https://www.figma.com/design/u5ZzqxZfjYboeGLYgSiIoT/Sistem-Kebencanaan-Kota-Bandar-Lampung?node-id=0-1&t=SSSPvh0B42fkFlIA-1",
    link: "https://www.figma.com/proto/u5ZzqxZfjYboeGLYgSiIoT/Sistem-Kebencanaan-Kota-Bandar-Lampung?page-id=2%3A5&node-id=499-13187&viewport=533%2C465%2C0.1&t=wvvjt4GvfgyAa9Bp-1&scaling=scale-down",
    image: "/SIPAD.webp",
    tags: [TAGS.EXCEL, TAGS.FIGMA, TAGS.PROTOTYPE],
    categories: [CATEGORIES.DATA_ANALYST, CATEGORIES.UIUX],
  },
  {
    title: "REFORA (Reservation Food of ITERA)",
    description:
      "‘REFORA’ is a canteen food reservation prototype designed for ITERA students to streamline food ordering.",
    prototype:
      "https://www.figma.com/design/98IOkbRcQo6lRO0oRG0rnj/Design-Aplikasi-Kantin-ITERA?node-id=0-1&t=Eji0Ln7EmTipN38T-1",
    link: "https://www.figma.com/proto/98IOkbRcQo6lRO0oRG0rnj/Design-Aplikasi-Kantin-ITERA?page-id=0%3A1&node-id=121-4276&p=f&viewport=483%2C518%2C0.04&t=u8h8ymUQVqwwp1aT-1&scaling=scale-down",
    image: "/REFORA.webp",
    tags: [TAGS.FIGMA, TAGS.PROTOTYPE],
    categories: [CATEGORIES.UIUX],
  },
]
---

<div class="flex flex-col gap-y-20 md:gap-y-28">
  {PROJECTS.map((project, index) => {
    const { image, title, description, tags, categories, link, github, prototype } = project
    const reverse = index % 2 === 1

    return (
      <article
        class={`group flex flex-col-reverse md:flex-row items-center gap-10 md:gap-14 ${
          reverse ? "md:flex-row-reverse" : ""
        }`}
      >
        <!-- Gambar Project -->
        <div class="w-full md:w-1/2">
          <div
            class="relative overflow-hidden rounded-2xl shadow-xl border border-gray-200 dark:border-gray-800 bg-white/70 dark:bg-gray-900/60 transition-transform duration-700 ease-out hover:-translate-y-2 hover:shadow-2xl"
          >
            <img
              src={image}
              alt={title}
              class="object-cover w-full h-64 sm:h-72 md:h-[22rem] transition-transform duration-700 group-hover:scale-105"
              loading="lazy"
            />
          </div>
        </div>

        <!-- Detail Project -->
        <div class="w-full md:w-1/2 space-y-3">
          <h3 class="text-2xl sm:text-3xl font-bold text-[#C4B073]">{title}</h3>

          <!-- Categories -->
          <ul class="flex flex-wrap gap-2 mb-2">
            {categories.map((cat) => (
              <li key={cat.name}>
                <span class={`rounded-full text-xs ${cat.class} py-1.5 px-3 font-medium shadow-sm`}>
                  {cat.name}
                </span>
              </li>
            ))}
          </ul>

          <!-- Tags -->
          <ul class="flex flex-wrap gap-2">
            {tags.map((tag) => (
              <li key={tag.name}>
                <span
                  class={`flex items-center gap-1.5 rounded-full text-xs ${tag.class} py-1.5 px-3 font-medium shadow-sm`}
                >
                  <tag.icon class={tag.iconSize} />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>

          <p class="text-gray-700 dark:text-gray-300 leading-relaxed mt-4">{description}</p>

          <!-- Tombol Link -->
          <footer class="flex flex-wrap gap-3 mt-5">
            {github && (
              <LinkButton
                href={github}
                class="border-2 border-[#C4B073] text-gray-900 dark:text-white hover:bg-[#C4B073] hover:text-white transition-all px-4 py-2 rounded-lg flex items-center gap-2 font-medium"
              >
                <GitHub class="w-5 h-5" />
                Code
              </LinkButton>
            )}
            {link && (
              <LinkButton
                href={link}
                class="border-2 border-[#C4B073] text-gray-900 dark:text-white hover:bg-[#C4B073] hover:text-white transition-all px-4 py-2 rounded-lg flex items-center gap-2 font-medium"
              >
                <Link class="w-5 h-5" />
                Preview
              </LinkButton>
            )}
            {prototype && (
              <LinkButton
                href={prototype}
                class="bg-[#C4B073] text-white hover:bg-[#bda05f] transition-all px-4 py-2 rounded-lg flex items-center gap-2 font-medium"
              >
                <Prototype class="w-5 h-5" />
                Prototype
              </LinkButton>
            )}
          </footer>
        </div>
      </article>
    )
  })}
</div>

<style is:global>
  article img {
    transition: transform 0.7s ease, filter 0.5s ease;
  }
  article:hover img {
    filter: brightness(1.05);
  }

  @media (max-width: 768px) {
    article {
      text-align: center;
    }
    article ul {
      justify-content: center;
    }
    footer {
      justify-content: center;
    }
  }
</style>
