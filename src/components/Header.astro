---
import ThemeToggle from "./ThemeToggle.astro";

const navItems = [
  { title: "Experience", label: "experience", url: "/#experience" },
  { title: "Projects", label: "project", url: "/#project" },
  { title: "Article", label: "articles", url: "/#articles" },
  { title: "About Me", label: "about-me", url: "/#about-me" },
  {
    title: "Contacts",
    label: "contacts",
    url: "mailto:vin.simorangkir81@gmail.com",
  },
];
---

<header class="fixed top-5 z-50 w-full flex justify-center px-4">
  <nav
    id="navbar"
    class="relative flex items-center justify-between gap-4 px-6 py-3 text-sm font-medium
           rounded-full border border-white/10 dark:border-gray-800/60
           shadow-lg transition-all duration-500 backdrop-blur-xl
           bg-white/70 dark:bg-[#0b0b0b]/70 w-fit"
  >
    <!-- ðŸŒ Mobile Menu Toggle -->
    <button
      id="menu-toggle"
      class="sm:hidden p-2 rounded-md hover:bg-[#0f7095]/10 dark:hover:bg-[#0f7095]/20 transition"
      aria-label="Toggle menu"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.6"
        stroke="currentColor"
        class="w-6 h-6 text-gray-800 dark:text-gray-200"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
    </button>

    <!-- ðŸ§­ Desktop Navigation -->
    <div id="menu" class="hidden sm:flex items-center gap-2 relative">
      <span
        id="active-indicator"
        class="absolute bottom-0 h-[2px] bg-[#0f7095] rounded-full transition-all duration-300 ease-out opacity-0"
      ></span>

      {
        navItems.map((link) => (
          <a
            href={link.url}
            aria-label={link.label}
            class="relative flex items-center justify-center px-3 py-1.5 rounded-full
                   text-gray-700 dark:text-gray-200 transition-all duration-300
                   hover:text-[#0f7095] hover:bg-[#0f7095]/10"
          >
            {link.title}
          </a>
        ))
      }
    </div>

    <!-- ðŸŒ™ Theme Toggle -->
    <div class="flex items-center">
      <ThemeToggle />
    </div>
  </nav>

  <!-- ðŸ“± Mobile Dropdown Menu -->
  <div
    id="mobile-menu"
    class="hidden fixed top-20 left-1/2 -translate-x-1/2 flex-col items-center gap-3 p-4 rounded-2xl
           border border-white/20 dark:border-gray-700/40 bg-white/80 dark:bg-[#0b0b0b]/90
           backdrop-blur-xl shadow-2xl transition-all duration-300 opacity-0 sm:hidden"
  >
    {
      navItems.map((link) => (
        <a
          href={link.url}
          aria-label={link.label}
          class="block px-5 py-2 rounded-lg text-gray-800 dark:text-gray-200
                 hover:text-[#0f7095] hover:bg-[#0f7095]/10 transition-all duration-300"
        >
          {link.title}
        </a>
      ))
    }
  </div>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const nav = document.getElementById("navbar");
    const indicator = document.getElementById("active-indicator");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuToggle = document.getElementById("menu-toggle");
    const sections = document.querySelectorAll("section[id]");
    const navLinks = nav
      ? (Array.from(nav.querySelectorAll("a[aria-label]")) as HTMLElement[])
      : ([] as HTMLElement[]);

    if (!nav || !indicator || !menuToggle || !mobileMenu) return;

    // ðŸ§­ aktif link
    let activeLink: HTMLAnchorElement | null = null;

    // ðŸª„ fungsi indikator aktif
    function moveIndicator(target: HTMLElement | null) {
      if (!target || !indicator) return;
      const rect = target.getBoundingClientRect();
      const parentRect =
        target.parentElement && target.parentElement.getBoundingClientRect();
      if (!parentRect) return;
      indicator.style.width = `${rect.width}px`;
      indicator.style.left = `${rect.left - parentRect.left}px`;
      indicator.style.opacity = "1";
    }

    // ðŸ” observer untuk scroll section
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            navLinks.forEach((link) => {
              const match = link.getAttribute("aria-label") === entry.target.id;
              link.classList.toggle("text-[#0f7095]", match);
              if (match) {
                activeLink = link as HTMLAnchorElement;
                moveIndicator(link);
              }
            });
          }
        });
      },
      { threshold: 0.45 }
    );

    sections.forEach((s) => observer.observe(s));
    window.addEventListener("resize", () => moveIndicator(activeLink));

    // ðŸ“± Toggle mobile menu
    menuToggle.addEventListener("click", () => {
      if (!mobileMenu) return;
      const isVisible = !mobileMenu.classList.contains("hidden");
      if (isVisible) {
        mobileMenu.classList.add("opacity-0");
        setTimeout(() => mobileMenu.classList.add("hidden"), 200);
      } else {
        mobileMenu.classList.remove("hidden");
        setTimeout(() => mobileMenu.classList.remove("opacity-0"), 10);
      }
    });

    // âœ¨ Inisialisasi awal
    setTimeout(() => {
      if (navLinks.length > 0) {
        activeLink = navLinks[0] as HTMLAnchorElement;
        moveIndicator(activeLink);
      }
    }, 250);
  });
</script>

<!-- ðŸŽ¨ Styling -->
<style>
  header {
    animation: fadeDown 0.8s ease-out both;
  }

  @keyframes fadeDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  nav {
    animation: navShadow linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes navShadow {
    0% {
      box-shadow: none;
      backdrop-filter: blur(10px);
    }
    100% {
      box-shadow: 0 4px 25px rgba(15, 112, 149, 0.2);
      backdrop-filter: blur(20px);
    }
  }

  #mobile-menu {
    transition:
      opacity 0.25s ease,
      transform 0.25s ease;
  }
</style>
