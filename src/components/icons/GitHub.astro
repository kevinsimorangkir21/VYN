---
const {
  size = 26,
  color = "currentColor",
  class: className = "",
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke={color}
  stroke-width="1.9"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`kvns-icon-github transition-all duration-300 ease-out ${className}`}
>
  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
  <path
    d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2
    c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2
    s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3
    a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6
    c-.6 .6 -.6 1.2 -.5 2v3.5"
  ></path>
  <defs>
    <linearGradient id="kvnsGitGold" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#c9b676"></stop>
      <stop offset="100%" stop-color="#e9dda5"></stop>
    </linearGradient>
  </defs>
</svg>

<style>
  .kvns-icon-github {
    cursor: pointer;
  }
  .kvns-icon-github:hover {
    transform: translateY(-2px) scale(1.11);
    filter: drop-shadow(0 0 7px rgba(201, 182, 118, 0.42));
  }
  .kvns-icon-github.gradient path {
    stroke: url(#kvnsGitGold);
  }
</style>
