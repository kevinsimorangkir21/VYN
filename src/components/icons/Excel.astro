---
const { size = 24, color = "white", class: className = "" } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 256 256"
  width={size}
  height={size}
  fill="none"
  stroke={color}
  stroke-width="12"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`icon icon-excel ${className}`}
>
  <!-- Border / outer frame -->
  <rect x="32" y="32" width="192" height="192" rx="24"></rect>

  <!-- Inner panel -->
  <rect x="64" y="64" width="128" height="128" rx="8"></rect>

  <!-- Letter X -->
  <path d="M100 176L76 128l24-48"></path>
  <path d="M156 176l-20-48 20-48"></path>
</svg>

<style>
  .icon-excel {
    transition:
      transform 0.3s ease,
      stroke 0.3s ease,
      filter 0.3s ease;
    cursor: pointer;
  }

  .icon-excel:hover {
    transform: scale(1.12);
    stroke: url(#gold-gradient);
    filter: drop-shadow(0 0 6px rgba(196, 176, 115, 0.4));
  }

  html.dark .icon-excel:hover {
    filter: drop-shadow(0 0 8px rgba(233, 217, 153, 0.5));
  }
</style>

<!-- Gradient reusable -->
<svg width="0" height="0">
  <defs>
    <linearGradient id="gold-gradient" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#c4b073"></stop>
      <stop offset="100%" stop-color="#d9c98b"></stop>
    </linearGradient>
  </defs>
</svg>
