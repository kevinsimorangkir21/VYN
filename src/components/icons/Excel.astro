---
const { size = 24, class: className = "" } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 256 256"
  width={size}
  height={size}
  fill="none"
  stroke="white"
  stroke-width="12"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`icon icon-excel-white ${className}`}
>
  <!-- Border / outer frame -->
  <rect x="32" y="32" width="192" height="192" rx="24" />

  <!-- Inner panel -->
  <rect x="64" y="64" width="128" height="128" rx="8" />

  <!-- Letter X -->
  <path d="M100 176L76 128l24-48" />
  <path d="M156 176l-20-48 20-48" />
</svg>
