---
const {
  size = 26,
  color = "currentColor",
  class: className = "",
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke={color}
  stroke-width="1.9"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`kvns-icon-ig transition-all duration-300 ease-out ${className}`}
>
  <rect x="4" y="4" width="16" height="16" rx="4"></rect>
  <circle cx="12" cy="12" r="3"></circle>
  <path d="M16.5 7.5h0"></path>

  <defs>
    <linearGradient id="kvnsGoldIG" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#c9b676"></stop>
      <stop offset="100%" stop-color="#e9dda5"></stop>
    </linearGradient>
  </defs>
</svg>

<style>
  .kvns-icon-ig {
    cursor: pointer;
  }

  .kvns-icon-ig:hover {
    transform: translateY(-2px) scale(1.11);
    stroke: url(#kvnsGoldIG);
    filter: drop-shadow(0 0 7px rgba(201, 182, 118, 0.4));
  }

  html.dark .kvns-icon-ig:hover {
    filter: drop-shadow(0 0 11px rgba(233, 217, 153, 0.55));
  }
</style>
