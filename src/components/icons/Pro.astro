---
const {
  size = 26,
  color = "currentColor",
  class: className = "",
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke={color}
  stroke-width="1.9"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`kvns-icon-wireframe transition-all duration-300 ease-out ${className}`}
>
  <!-- outer frame -->
  <rect x="3" y="3" width="18" height="18" rx="3"></rect>

  <!-- header -->
  <rect x="5.5" y="5.5" width="13" height="2.8" rx="1.2"></rect>

  <!-- left sidebar -->
  <rect x="5.5" y="9.2" width="4.5" height="7" rx="1.2"></rect>

  <!-- content -->
  <rect x="10.8" y="9.2" width="7.7" height="7" rx="1.2"></rect>

  <!-- footer -->
  <rect x="5.5" y="17" width="13" height="2.1" rx="1"></rect>

  <defs>
    <linearGradient id="kvnsWireGF" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#c9b676"></stop>
      <stop offset="100%" stop-color="#e9dda5"></stop>
    </linearGradient>
  </defs>
</svg>

<style>
  .kvns-icon-wireframe {
    cursor: pointer;
  }
  .kvns-icon-wireframe:hover {
    transform: translateY(-2px) scale(1.11);
    stroke: url(#kvnsWireGF);
    filter: drop-shadow(0 0 7px rgba(201, 182, 118, 0.42));
  }
  html.dark .kvns-icon-wireframe:hover {
    filter: drop-shadow(0 0 11px rgba(233, 217, 153, 0.55));
  }
</style>
