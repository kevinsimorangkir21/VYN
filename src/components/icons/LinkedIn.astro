---
const {
  size = 24,
  color = "currentColor",
  class: className = "",
} = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 24 24"
  width={size}
  height={size}
  stroke-width="2"
  stroke={color}
  fill="none"
  stroke-linecap="round"
  stroke-linejoin="round"
  class={`icon icon-linkedin ${className}`}
>
  <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
  <path
    d="M4 4m0 2a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2z"
  ></path>
  <path d="M8 11l0 5"></path>
  <path d="M8 8l0 .01"></path>
  <path d="M12 16l0 -5"></path>
  <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
</svg>

<style>
  .icon-linkedin {
    transition:
      transform 0.3s ease,
      stroke 0.3s ease,
      filter 0.3s ease;
    cursor: pointer;
  }

  .icon-linkedin:hover {
    transform: scale(1.12) rotate(3deg);
    stroke: url(#gold-gradient);
    filter: drop-shadow(0 0 6px rgba(196, 176, 115, 0.4));
  }

  html.dark .icon-linkedin:hover {
    filter: drop-shadow(0 0 8px rgba(233, 217, 153, 0.5));
  }
</style>

<!-- Gradient reusable -->
<svg width="0" height="0">
  <defs>
    <linearGradient id="gold-gradient" x1="0" y1="0" x2="1" y2="1">
      <stop offset="0%" stop-color="#c4b073"></stop>
      <stop offset="100%" stop-color="#d9c98b"></stop>
    </linearGradient>
  </defs>
</svg>
