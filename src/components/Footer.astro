---
const currentYear = new Date().getFullYear();
const version = "v3.1.0";
---

<footer
  class="relative mt-28 px-6 w-full max-w-screen-xl mx-auto container
         overflow-hidden text-center md:text-left"
  aria-label="Site Footer"
>
  <!-- ðŸŒŒ Animated Gradient Background -->
  <div
    class="absolute inset-0 -z-10
           bg-[linear-gradient(120deg,#0b0b0b,#0f172a,#12263a)]
           bg-[length:400%_400%] animate-footerGradient
           before:content-[''] before:absolute before:inset-0
           before:bg-[radial-gradient(circle_at_top_left,rgba(15,112,149,0.18),transparent_70%)]
           after:content-[''] after:absolute after:inset-0
           after:bg-[radial-gradient(circle_at_bottom_right,rgba(161,150,101,0.15),transparent_70%)]"
  >
  </div>

  <style>
    @keyframes footerGradient {
      0%,
      100% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
    }
    .animate-footerGradient {
      animation: footerGradient 20s ease-in-out infinite;
    }

    @keyframes tealShimmer {
      0% {
        background-position: 0% 50%;
      }
      100% {
        background-position: 200% 50%;
      }
    }
    .animate-tealShimmer {
      animation: tealShimmer 4s linear infinite;
    }
  </style>

  <!-- ðŸ’« Main Footer Content -->
  <div
    class="flex flex-col md:flex-row md:items-center md:justify-between
           gap-6 md:gap-0 py-12 border-t border-[#0f7095]/40
           text-zinc-300 relative z-10 backdrop-blur-sm"
  >
    <!-- âœ¨ Left Section -->
    <div class="flex flex-col items-center md:items-start gap-2">
      <span class="text-sm tracking-wide">
        Â© {currentYear}
        <a
          href="https://www.linkedin.com/in/kevinsimorangkir/"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold text-transparent bg-clip-text
                 bg-gradient-to-r from-[#0f7095] via-[#5fb7cc] to-[#a19665]
                 animate-tealShimmer bg-[length:200%_auto]
                 hover:opacity-90 transition-opacity duration-300"
        >
          Portfolio KVNS
        </a>
      </span>

      <span class="text-xs text-zinc-500 font-mono select-none">
        ({version})
      </span>
    </div>

    <!-- âš¡ Right Section (Social Icons + Links) -->
    <div class="flex flex-col items-center md:items-end gap-3">
      <!-- ðŸŒ Social Icons -->
      <nav>
        <ul
          class="flex justify-center md:justify-end gap-5
                 text-sm font-medium text-[#0f7095]"
        >
          <!-- GitHub -->
          <li>
            <a
              href="https://github.com/kevinsimorangkir21"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-10 h-10 rounded-full
                     border border-[#0f7095]/70 text-[#0f7095]
                     transition-all duration-300
                     hover:bg-[#0f7095] hover:text-black
                     shadow-[0_0_10px_rgba(15,112,149,0.3)]
                     hover:shadow-[0_0_25px_rgba(15,112,149,0.5)]"
              aria-label="GitHub"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
                class="w-5 h-5 transition-transform duration-300 hover:scale-110"
              >
                <path
                  d="M12 .297a12 12 0 0 0-3.794 23.415c.6.111.793-.261.793-.578v-2.234c-3.338.726-4.042-1.416-4.042-1.416a3.186 3.186 0 0 0-1.337-1.757c-1.093-.748.083-.733.083-.733a2.52 2.52 0 0 1 1.837 1.235 2.556 2.556 0 0 0 3.497.997 2.574 2.574 0 0 1 .763-1.613c-2.665-.3-5.466-1.334-5.466-5.931a4.648 4.648 0 0 1 1.237-3.224 4.315 4.315 0 0 1 .117-3.182s1.006-.322 3.3 1.23a11.382 11.382 0 0 1 6.003 0c2.291-1.552 3.296-1.23 3.296-1.23a4.315 4.315 0 0 1 .118 3.182 4.648 4.648 0 0 1 1.236 3.224c0 4.61-2.805 5.628-5.479 5.922a2.885 2.885 0 0 1 .823 2.236v3.317c0 .319.192.694.801.576A12 12 0 0 0 12 .297z"
                ></path>
              </svg>
            </a>
          </li>

          <!-- Instagram -->
          <li>
            <a
              href="https://www.instagram.com/kevinsimorangkir/"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-10 h-10 rounded-full
                     border border-[#0f7095]/70 text-[#0f7095]
                     transition-all duration-300
                     hover:bg-[#0f7095] hover:text-black
                     shadow-[0_0_10px_rgba(15,112,149,0.3)]
                     hover:shadow-[0_0_25px_rgba(15,112,149,0.5)]"
              aria-label="Instagram"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
                class="w-5 h-5 transition-transform duration-300 hover:scale-110"
              >
                <path
                  d="M7.75 2A5.75 5.75 0 0 0 2 7.75v8.5A5.75 5.75 0 0 0 7.75 22h8.5A5.75 5.75 0 0 0 22 16.25v-8.5A5.75 5.75 0 0 0 16.25 2h-8.5zm0 1.5h8.5A4.25 4.25 0 0 1 20.5 7.75v8.5a4.25 4.25 0 0 1-4.25 4.25h-8.5A4.25 4.25 0 0 1 3.5 16.25v-8.5A4.25 4.25 0 0 1 7.75 3.5zm8.25 1.75a.75.75 0 0 0 0 1.5h.01a.75.75 0 0 0 0-1.5h-.01zM12 7a5 5 0 1 0 0 10 5 5 0 0 0 0-10zm0 1.5a3.5 3.5 0 1 1 0 7 3.5 3.5 0 0 1 0-7z"
                ></path>
              </svg>
            </a>
          </li>

          <!-- Twitter/X -->
          <li>
            <a
              href="https://x.com/kvnsimorangkir"
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center justify-center w-10 h-10 rounded-full
                     border border-[#0f7095]/70 text-[#0f7095]
                     transition-all duration-300
                     hover:bg-[#0f7095] hover:text-black
                     shadow-[0_0_10px_rgba(15,112,149,0.3)]
                     hover:shadow-[0_0_25px_rgba(15,112,149,0.5)]"
              aria-label="Twitter"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 24 24"
                class="w-5 h-5 transition-transform duration-300 hover:scale-110"
              >
                <path
                  d="M18.244 2H21l-6.436 7.36L22 22h-6.824l-4.7-6.2L5.088 22H2.333l6.83-7.8L2 2h6.911l4.28 5.64L18.244 2zM17.08 20h1.89L7.012 4H5.015L17.08 20z"
                ></path>
              </svg>
            </a>
          </li>
        </ul>
      </nav>

      <!-- ðŸ”’ Legal Links -->
      <div class="flex items-center gap-2 text-xs text-[#0f7095]">
        <a
          href="/privacy"
          class="hover:text-[#5fb7cc] hover:underline transition-colors duration-300"
        >
          Privacy Policy
        </a>
