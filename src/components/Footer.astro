---
import { Github, Instagram, Twitter, Palette } from "lucide-astro";
import pkg from "../../package.json" assert { type: "json" };

const currentYear = new Date().getFullYear();
const version = pkg?.version ? `v${pkg.version}` : "v";
---

<footer
  class="relative mt-20 px-6 w-full max-w-screen-xl mx-auto container overflow-hidden text-center md:text-left bg-white"
  aria-label="Site Footer"
>
  <!-- subtle white + teal glow -->
  <div
    class="absolute inset-0 -z-10 pointer-events-none bg-white
           before:content-[''] before:absolute before:inset-0
           before:bg-[radial-gradient(circle_at_50%_0%,rgba(15,112,149,0.07),transparent_60%)]
           before:blur-[110px] before:opacity-70"
  >
  </div>

  <style>
    @keyframes tealShimmer {
      0% {
        background-position: 0% 50%;
      }
      100% {
        background-position: 200% 50%;
      }
    }
    .animate-tealShimmer {
      animation: tealShimmer 4s linear infinite;
    }
  </style>

  <div
    class="relative z-10 flex flex-col md:flex-row md:items-center md:justify-between gap-6 py-8
           text-neutral-700 border-t border-[#0f7095]/15 backdrop-blur-[2px]"
  >
    <!-- left -->
    <div class="flex flex-col items-center md:items-start gap-1.5">
      <span class="text-sm tracking-wide">
        © {currentYear}
        <a
          href="https://www.linkedin.com/in/kevinsimorangkir/"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold text-transparent bg-clip-text
                 bg-gradient-to-r from-[#0f7095] via-[#5fb7cc] to-[#a19665]
                 animate-tealShimmer bg-[length:200%_auto] hover:opacity-90 transition-opacity"
        >
          Portfolio KVNS
        </a>
      </span>
      <span class="text-[11px] text-neutral-400 font-mono select-none"
        >({version})</span
      >
    </div>

    <!-- right -->
    <div class="flex flex-col items-center md:items-end gap-2.5">
      <nav aria-label="Social Links">
        <ul class="flex justify-center md:justify-end gap-4">
          <li>
            <a
              href="https://www.instagram.com/kevinsimorangkir/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Instagram"
              class="group flex items-center justify-center w-10 h-10 rounded-full
               ring-1 ring-[#0f7095]/35 text-[#0f7095] transition-all duration-300
               hover:bg-[#0f7095] hover:text-white"
            >
              <Instagram
                class="w-5 h-5 transition-transform duration-300 group-hover:scale-110"
              />
            </a>
          </li>

          <li>
            <a
              href="https://www.behance.net/kevinsimorangkir"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Behance"
              class="group flex items-center justify-center w-10 h-10 rounded-full
               ring-1 ring-[#0f7095]/35 text-[#0f7095] transition-all duration-300
               hover:bg-[#0f7095] hover:text-white"
            >
              <Palette
                class="w-5 h-5 transition-transform duration-300 group-hover:scale-110"
              />
            </a>
          </li>

          <li>
            <a
              href="https://github.com/kevinsimorangkir21"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="GitHub"
              class="group flex items-center justify-center w-10 h-10 rounded-full
               ring-1 ring-[#0f7095]/35 text-[#0f7095] transition-all duration-300
               hover:bg-[#0f7095] hover:text-white"
            >
              <Github
                class="w-5 h-5 transition-transform duration-300 group-hover:scale-110"
              />
            </a>
          </li>

          <li>
            <a
              href="https://x.com/kvnsimorangkir"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="X (Twitter)"
              class="group flex items-center justify-center w-10 h-10 rounded-full
               ring-1 ring-[#0f7095]/35 text-[#0f7095] transition-all duration-300
               hover:bg-[#0f7095] hover:text-white"
            >
              <Twitter
                class="w-5 h-5 transition-transform duration-300 group-hover:scale-110"
              />
            </a>
          </li>
        </ul>
      </nav>

      <div class="flex items-center gap-2 text-[11.5px] text-[#0f7095]">
        <a href="/privacy" class="hover:underline transition-colors">Privacy</a>
        <span class="opacity-30">•</span>
        <a href="/terms" class="hover:underline transition-colors">Terms</a>
      </div>
    </div>
  </div>
</footer>
