  </div>

  <!-- ðŸ§© Profile Image -->
  <div
    class="relative order-1 md:order-2 group"
  >
    <img
      width="240"
      height="240"
      src={defaultImage}
      alt={personalImageAlt}
      class="object-cover aspect-square rounded-2xl
             p-2 w-64 h-64
             bg-black/10 dark:bg-yellow-500/5
