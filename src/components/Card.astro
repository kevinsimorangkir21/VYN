---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card group">
  <a
    href={href}
    class="block w-full h-full rounded-xl p-6 transition-all duration-300"
  >
    <h2
      class="flex items-center justify-between text-xl font-semibold text-gray-800 dark:text-gray-100 mb-2 transition-colors duration-300"
    >
      {title}
      <span
        class="text-[#58C4C1] group-hover:translate-x-1 transition-transform duration-300"
        >&rarr;</span
      >
    </h2>
    <p class="text-gray-600 dark:text-gray-400 text-base leading-relaxed">
      {body}
    </p>
  </a>
</li>

<style is:global>
  /* âœ¨ Base style */
  .link-card {
    list-style: none;
    display: flex;
    border-radius: 0.75rem;
    background: linear-gradient(135deg, #58c4c1, #3ba7a3);
    padding: 1px;
    transition: all 0.5s ease;
  }

  .link-card a {
    background-color: #ffffff;
    color: #1a1a1a;
    border-radius: 0.75rem;
  }

  html.dark .link-card a {
    background-color: #161616;
  }

  /* ðŸ©µ Hover & focus effect */
  .link-card:hover,
  .link-card:focus-within {
    transform: translateY(-2px);
    box-shadow:
      0 8px 20px rgba(88, 196, 193, 0.35),
      inset 0 0 0 1px rgba(88, 196, 193, 0.4);
  }

  .link-card a:hover h2 {
    color: #3ba7a3;
  }

  .link-card a:hover p {
    color: #2f2f2f;
  }

  html.dark .link-card a:hover p {
    color: #d8d8d8;
  }

  /* âœ¨ Responsive tweaks */
  @media (max-width: 640px) {
    .link-card a {
      padding: 1rem;
    }
    .link-card h2 {
      font-size: 1.1rem;
    }
    .link-card p {
      font-size: 0.95rem;
    }
  }
</style>
