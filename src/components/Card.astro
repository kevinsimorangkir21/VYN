---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="kvns-link-card group">
  <a
    href={href}
    class="kvns-link-core block w-full h-full rounded-2xl p-6 sm:p-7"
  >
    <h2 class="flex items-center justify-between text-xl font-semibold mb-2">
      <span>{title}</span>
      <span class="arrow">&rarr;</span>
    </h2>

    <p class="text-base leading-relaxed">{body}</p>
  </a>
</li>

<style is:global>
  .kvns-link-card {
    list-style: none;
  }

  .kvns-link-core {
    background: var(--surface-2);
    border: 1px solid var(--line-soft);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    transition: all 0.45s var(--ease);
    color: var(--text-default);
  }

  .kvns-link-core:hover {
    border-color: var(--brand-500);
    box-shadow: 0 10px 32px -6px
      color-mix(in srgb, var(--brand-500) 40%, transparent);
    transform: translateY(-3px) scale(1.02);
  }

  .kvns-link-core .arrow {
    color: var(--brand-500);
    opacity: 0.7;
    transition: all 0.35s var(--ease);
  }
  .kvns-link-core:hover .arrow {
    opacity: 1;
    transform: translateX(3px);
  }

  .kvns-link-core h2 span {
    transition: color 0.35s var(--ease);
  }
  .kvns-link-core:hover h2 span {
    color: var(--brand-500);
  }

  @media (max-width: 640px) {
    .kvns-link-core {
      padding: 1rem;
    }
    .kvns-link-core h2 {
      font-size: 1.05rem;
    }
    .kvns-link-core p {
      font-size: 0.95rem;
    }
  }

  /* smooth entry */
  .kvns-link-card {
    animation: fadeUpCard 0.6s ease-out both;
  }
  @keyframes fadeUpCard {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
