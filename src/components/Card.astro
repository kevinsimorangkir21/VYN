---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card group">
  <a
    href={href}
    class="block w-full h-full rounded-2xl p-6 sm:p-7 transition-all duration-500 ease-out
           bg-white/80 dark:bg-[#0b0b0b]/70
           backdrop-blur-xl border border-transparent hover:border-[#0f7095]/40
           shadow-[0_4px_20px_rgba(0,0,0,0.05)]
           hover:shadow-[0_6px_30px_rgba(15,112,149,0.25)]
           hover:-translate-y-[3px]"
  >
    <h2
      class="flex items-center justify-between text-xl font-semibold
             text-gray-800 dark:text-gray-100 mb-2 transition-colors duration-300"
    >
      <span class="group-hover:text-[#0f7095]">{title}</span>
      <span
        class="text-[#0f7095] opacity-80 group-hover:translate-x-1 group-hover:opacity-100 transition-all duration-300"
        >&rarr;</span
      >
    </h2>

    <p
      class="text-gray-600 dark:text-gray-400 text-base leading-relaxed transition-colors duration-300
             group-hover:text-gray-800 dark:group-hover:text-gray-300"
    >
      {body}
    </p>
  </a>
</li>

<style is:global>
  /* ğŸŒŠ Border Gradasi Premium */
  .link-card {
    list-style: none;
    display: flex;
    border-radius: 1rem;
    background: linear-gradient(135deg, #0f7095, #74c0d9);
    padding: 1.2px;
    transition: all 0.5s ease;
  }

  /* ğŸŒ™ Mode Gelap */
  html.dark .link-card {
    background: linear-gradient(135deg, #0f7095, #0b2f3d);
  }

  /* âœ¨ Hover Effect */
  .link-card:hover {
    box-shadow:
      0 8px 25px rgba(15, 112, 149, 0.25),
      inset 0 0 0 1px rgba(15, 112, 149, 0.3);
    transform: translateY(-2px);
  }

  /* ğŸŒˆ Hover transition */
  .link-card a:hover h2 span {
    color: #0f7095;
  }

  /* ğŸ“± Responsif */
  @media (max-width: 640px) {
    .link-card a {
      padding: 1rem;
    }
    .link-card h2 {
      font-size: 1.05rem;
    }
    .link-card p {
      font-size: 0.95rem;
    }
  }

  /* ğŸŒ¬ï¸ Entry animation */
  .link-card {
    animation: fadeUpCard 0.8s ease-out both;
  }

  @keyframes fadeUpCard {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
